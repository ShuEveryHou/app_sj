<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- 顶部工具栏 -->
    <LinearLayout
        android:id="@+id/topToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#80000000"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true">

        <!-- 取消按钮 -->
        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="8dp" />

        <!-- 标题 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="图片增强"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:gravity="center" />

        <!-- 保存按钮 -->
        <TextView
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="保存"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="8dp" />

    </LinearLayout>

    <!-- 图片显示区域 -->
    <FrameLayout
        android:id="@+id/imageContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topToolbar"
        android:layout_above="@+id/controlPanel">

        <!-- 显示处理中的图片 -->
        <ImageView
            android:id="@+id/ivProcessed"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:contentDescription="处理中的图片" />

        <!-- 显示原图作为对比（可选） -->
        <ImageView
            android:id="@+id/ivOriginal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:alpha="0.5"
            android:visibility="gone"
            android:contentDescription="原图" />

    </FrameLayout>

    <!-- 控制面板 -->
    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="#E6000000">

        <!-- 功能按钮行 -->
        <LinearLayout
            android:id="@+id/functionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#40000000"
            android:paddingVertical="8px">

            <!-- 亮度按钮 -->
            <Button
                android:id="@+id/btnBrightness"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="亮度"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:background="@drawable/btn_option_selector" />

            <!-- 对比度按钮 -->
            <Button
                android:id="@+id/btnContrast"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="对比"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:background="@drawable/btn_option_selector" />

            <!-- 滤镜按钮 -->
            <Button
                android:id="@+id/btnFilter"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="滤镜"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:background="@drawable/btn_option_selector" />

            <!-- 贴纸按钮（暂未实现） -->
            <Button
                android:id="@+id/btnSticker"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="贴纸"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:background="@drawable/btn_option_selector" />

            <!-- 拼接按钮（暂未实现） -->
            <Button
                android:id="@+id/btnMerge"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="拼接"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:background="@drawable/btn_option_selector" />

        </LinearLayout>

        <!-- 亮度控制面板 -->
        <LinearLayout
            android:id="@+id/panelBrightness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#50000000"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="亮度调节 (-100 ~ 100)"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <SeekBar
                android:id="@+id/seekBarBrightness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="200"
                android:progress="100" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-100"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvBrightnessValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 对比度控制面板 -->
        <LinearLayout
            android:id="@+id/panelContrast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#50000000"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="对比度调节 (-50 ~ 150)"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <SeekBar
                android:id="@+id/seekBarContrast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="200"
                android:progress="50" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-50"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvContrastValue"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="150"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 滤镜面板容器 -->
        <LinearLayout
            android:id="@+id/panelFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#50000000"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="选择滤镜"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_marginBottom="12dp" />

            <!-- 滤镜选择区域 - 支持水平滑动 -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/filterContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- 原图滤镜 -->
                    <LinearLayout
                        android:id="@+id/filterOriginal"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/filter_item_selector"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/btn_option_selector"
                            android:scaleType="centerCrop"
                            android:contentDescription="原图" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="原图"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- 黑白滤镜 -->
                    <LinearLayout
                        android:id="@+id/filterBlackWhite"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/filter_item_selector"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/btn_option_selector"
                            android:scaleType="centerCrop"
                            android:contentDescription="黑白" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="黑白"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- 复古滤镜 -->
                    <LinearLayout
                        android:id="@+id/filterRetro"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/filter_item_selector"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/btn_option_selector"
                            android:scaleType="centerCrop"
                            android:contentDescription="复古" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="复古"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- 清新滤镜 -->
                    <LinearLayout
                        android:id="@+id/filterFresh"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/filter_item_selector"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/btn_option_selector"
                            android:scaleType="centerCrop"
                            android:contentDescription="清新" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="清新"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- 暖色调滤镜 -->
                    <LinearLayout
                        android:id="@+id/filterWarm"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/filter_item_selector"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/btn_option_selector"
                            android:scaleType="centerCrop"
                            android:contentDescription="暖色调" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="暖色调"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <!-- 冷色调滤镜 -->
                    <LinearLayout
                        android:id="@+id/filterCold"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@drawable/filter_item_selector"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/btn_option_selector"
                            android:scaleType="centerCrop"
                            android:contentDescription="冷色调" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="冷色调"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>