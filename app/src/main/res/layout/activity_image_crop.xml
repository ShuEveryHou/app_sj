<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- 图片显示区域 -->
    <com.example.app_sj.ZoomableImageView
        android:id="@+id/ivCropImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="裁剪图片" />

    <!-- 裁剪框（半透明遮罩层） -->
    <com.example.app_sj.CropOverlayView
        android:id="@+id/cropOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- 顶部工具栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- 取消按钮 -->
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent" />

        <!-- 标题 -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="图片裁剪"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_gravity="center_vertical" />

        <!-- 确定按钮 -->
        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent" />

    </LinearLayout>

    <!-- 比例选择栏 -->
    <LinearLayout
        android:id="@+id/layoutRatioSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_alignParentBottom="true">

        <!-- 自由比例 -->
        <Button
            android:id="@+id/btnRatioFree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="自由"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent" />

        <!-- 1:1 比例 -->
        <Button
            android:id="@+id/btnRatio1_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1:1"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent" />

        <!-- 4:3 比例 -->
        <Button
            android:id="@+id/btnRatio4_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="4:3"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent" />

        <!-- 16:9 比例 -->
        <Button
            android:id="@+id/btnRatio16_9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="16:9"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent" />

        <!-- 3:4 比例 -->
        <Button
            android:id="@+id/btnRatio3_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="3:4"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent" />

        <!-- 9:16 比例 -->
        <Button
            android:id="@+id/btnRatio9_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="9:16"
            android:textColor="@android:color/white"
            android:background="@android:color/transparent" />

    </LinearLayout>

</RelativeLayout>