<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- 图片容器 -->
    <FrameLayout
        android:id="@+id/imageContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomToolbar">

        <!-- 可缩放的图片视图 -->
        <com.example.app_sj.ZoomableImageView
            android:id="@+id/cropImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="matrix" />

        <!-- 裁剪框覆盖层 -->
        <com.example.app_sj.CropOverlayView
            android:id="@+id/cropOverlayView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <!-- 顶部工具栏 -->
    <LinearLayout
        android:id="@+id/topToolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#E6000000"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical">

        <!-- 取消按钮 -->
        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="8dp" />

        <!-- 标题 -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="编辑图片"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:gravity="center" />

        <!-- 还原按钮 -->
        <TextView
            android:id="@+id/btnReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还原"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="8dp"
            android:visibility="gone" />

        <!-- 完成按钮 -->
        <TextView
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:padding="8dp" />

    </LinearLayout>

    <!-- 底部工具栏 -->
    <LinearLayout
        android:id="@+id/bottomToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#E6000000"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- 功能选择标签 -->
        <LinearLayout
            android:id="@+id/tabContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- 裁剪标签 -->
            <TextView
                android:id="@+id/tabCrop"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="裁剪"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/btn_tab_selector" />

            <!-- 旋转标签 -->
            <TextView
                android:id="@+id/tabRotate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="旋转"
                android:textColor="#80FFFFFF"
                android:textSize="16sp"
                android:gravity="center"
                android:padding="12dp"
                android:background="@drawable/btn_tab_selector" />

        </LinearLayout>

        <!-- 裁剪界面 -->
        <LinearLayout
            android:id="@+id/layoutCrop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!-- 比例选择区域 - 使用HorizontalScrollView包装 -->
            <HorizontalScrollView
                android:id="@+id/scrollRatioContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:scrollbars="none"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/ratioContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- 自由比例 -->
                    <Button
                        android:id="@+id/btnFree"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:minWidth="80dp"
                        android:text="自由"
                        android:textColor="@android:color/white"
                        android:background="@drawable/btn_ratio_selector"
                        android:textAllCaps="false"
                        android:layout_marginEnd="8dp" />

                    <!-- 1:1 比例 -->
                    <Button
                        android:id="@+id/btn1_1"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:minWidth="80dp"
                        android:text="1:1"
                        android:textColor="@android:color/white"
                        android:background="@drawable/btn_ratio_selector"
                        android:textAllCaps="false"
                        android:layout_marginEnd="8dp" />

                    <!-- 4:3 比例 -->
                    <Button
                        android:id="@+id/btn4_3"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:minWidth="80dp"
                        android:text="4:3"
                        android:textColor="@android:color/white"
                        android:background="@drawable/btn_ratio_selector"
                        android:textAllCaps="false"
                        android:layout_marginEnd="8dp" />

                    <!-- 3:4 比例 -->
                    <Button
                        android:id="@+id/btn3_4"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:minWidth="80dp"
                        android:text="3:4"
                        android:textColor="@android:color/white"
                        android:background="@drawable/btn_ratio_selector"
                        android:textAllCaps="false"
                        android:layout_marginEnd="8dp" />

                    <!-- 16:9 比例 -->
                    <Button
                        android:id="@+id/btn16_9"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:minWidth="80dp"
                        android:text="16:9"
                        android:textColor="@android:color/white"
                        android:background="@drawable/btn_ratio_selector"
                        android:textAllCaps="false"
                        android:layout_marginEnd="8dp" />

                    <!-- 9:16 比例 -->
                    <Button
                        android:id="@+id/btn9_16"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:minWidth="80dp"
                        android:text="9:16"
                        android:textColor="@android:color/white"
                        android:background="@drawable/btn_ratio_selector"
                        android:textAllCaps="false"
                        android:layout_marginEnd="8dp" />

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>

        <!-- 旋转界面 -->
        <LinearLayout
            android:id="@+id/layoutRotate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="12dp">

            <!-- 操作按钮水平滑动容器 -->
            <HorizontalScrollView
                android:id="@+id/scrollRotateOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:fillViewport="true"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:id="@+id/rotateOptionsContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="8dp">

                    <!-- 顺时针旋转 -->
                    <Button
                        android:id="@+id/btnRotateClockwise"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:minWidth="100dp"
                        android:text="↻ 顺时针"
                        android:textColor="@android:color/white"
                        android:background="@drawable/btn_rotate_selector"
                        android:textAllCaps="false"
                        android:layout_marginEnd="8dp" />

                    <!-- 逆时针旋转 -->
                    <Button
                        android:id="@+id/btnRotateCounterClockwise"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:minWidth="100dp"
                        android:text="↺ 逆时针"
                        android:textColor="@android:color/white"
                        android:background="@drawable/btn_rotate_selector"
                        android:textAllCaps="false"
                        android:layout_marginEnd="8dp" />

                    <!-- 180°旋转 -->
                    <Button
                        android:id="@+id/btnRotate180"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:minWidth="80dp"
                        android:text="180°"
                        android:textColor="@android:color/white"
                        android:background="@drawable/btn_rotate_selector"
                        android:textAllCaps="false"
                        android:layout_marginEnd="8dp" />

                    <!-- 水平翻转 -->
                    <Button
                        android:id="@+id/btnFlipHorizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:minWidth="100dp"
                        android:text="⇄ 水平"
                        android:textColor="@android:color/white"
                        android:background="@drawable/btn_flip_selector"
                        android:textAllCaps="false"
                        android:layout_marginEnd="8dp" />

                    <!-- 垂直翻转 -->
                    <Button
                        android:id="@+id/btnFlipVertical"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:minWidth="100dp"
                        android:text="⇅ 垂直"
                        android:textColor="@android:color/white"
                        android:background="@drawable/btn_flip_selector"
                        android:textAllCaps="false" />

                </LinearLayout>
            </HorizontalScrollView>

            <!-- 当前状态显示 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="#20000000"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/tvRotateStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="状态: 旋转0° | 水平: 正常 | 垂直: 正常"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>